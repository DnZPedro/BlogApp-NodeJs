{{#each erro}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagem/edit" , method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" required autocomplete="off"
                value="{{postagem.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required autocomplete="off" value="{{postagem.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" required autocomplete="off"
                value="{{postagem.descricao}}">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" required autocomplete="off">{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select" required autocomplete="off">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada!</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Editar Postagem</button>
        </form>
    </div>
</div>